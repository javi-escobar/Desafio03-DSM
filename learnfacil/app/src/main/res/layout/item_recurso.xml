<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_primary">

    <ImageView
        android:id="@+id/imagenRecurso"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tituloRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/descripcionRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tipoRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/enlaceRecurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:textColor="@color/dark_primary"
        android:clickable="true"
        android:autoLink="web"
        android:linksClickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonEditarRecurso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/editar"
            android:background="@color/primary_color"
            android:textColor="@color/primary_text"/>

        <Button
            android:id="@+id/buttonEliminarRecurso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/eliminar"
            android:background="@color/primary_color"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

</LinearLayout>
